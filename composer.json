{
    "name": "hibasabouh/laravel-model-translations",
    "description": "Database-driven model translations for Laravel using separate translation tables.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "laravel",
        "translations",
        "eloquent",
        "model",
        "i18n"
    ],
    "homepage": "https://github.com/hibasabouh/laravel-model-translations",
    "support": {
        "issues": "https://github.com/hibasabouh/laravel-model-translations/issues",
        "source": "https://github.com/hibasabouh/laravel-model-translations"
    },
    "authors": [
        {
            "name": "Hiba Sabouh",
            "email": "hiba.sabouh.98@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/database": "^10.0",
        "illuminate/support": "^10.0"
    },
    "require-dev": {
        "pestphp/pest": "^2.0",
        "orchestra/testbench": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "HibaSabouh\\ModelTranslations\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "HibaSabouh\\ModelTranslations\\ModelTranslationsServiceProvider"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
